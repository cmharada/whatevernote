<header class="notebook-header"
  data-toggle="collapse"
  data-target=".notebook-index">
  <span class="index-header">
    <span class="caret"></span>Notebooks
    <button class="btn btn-xxs btn-danger new-notebook">
      <span class="glyphicon glyphicon-plus"></span>
    </button>
  </span>
</header>
<ul class="nav notebook-index collapse in">
  <li class="notebook" data-id="null">
    <div class="notebook-title item">
      <span class="glyphicon glyphicon-folder-open"></span>All Notes
      <span class="badge"><%= allNotes.length %></span>
      <span class="arrow">
        <span class="glyphicon glyphicon-arrow-left"></span>
      </span>
    </div>
  </li>
  <% notebooks.each(function(notebook) { %>
    <li class="notebook" data-id="<%= notebook.id %>">
      <div class="notebook-title item">
        <span class="glyphicon glyphicon-folder-open"></span>
        <%= notebook.escape("title") %>
        <span class="badge"><%= notebook.escape("notes_count") %></span>
        <span class="arrow">
          <span class="glyphicon glyphicon-arrow-left"></span>
        </span>
        <span class="show-options">
          <div class="show-options-button">
            <button class="btn btn-xxs">
              <span class="caret"></span></span>
            </button>
          </div>
          <div class="options-menu hidden">
            <div class="edit-notebook item">Edit</div>
            <div class="delete-notebook item">Delete</div>
          </div>
        </span>
      </div>
    </li>
  <% }) %>
  <li>
    <div class="item note-trash">
      <span class="glyphicon glyphicon-trash"></span>
      Trash
      <span class="arrow">
        <span class="glyphicon glyphicon-arrow-left"></span>
      </span>
    </div>
  </li>
</ul>

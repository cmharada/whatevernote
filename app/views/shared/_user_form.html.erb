<% if sign_up %>
  <% action_url = users_url %>
  <% button_name = "Sign Up" %>
<% else %>
  <% action_url = session_url %>
  <% button_name = "Log In" %>
<% end %>

<form action="<%= action_url %>" method="POST" class="form-horizontal">
  <%= form_auth %>
  <div class="form-group">
    <label for="user_name" class="col-xs-2 control-label">Username</label>
    <input type="text"
      name="user[username]"
      id="user_name"
      class="form-control"
      value="<%= user.username %>">
  </div>
  <div class="form-group">
    <label for="user_password" class="col-xs-2 control-label">Password</label>
    <input type="password"
      name="user[password]"
      id="user_password"
      class="form-control">
  </div>
  <input type="submit" class="btn btn-primary" value="<%= button_name %>">
</form>
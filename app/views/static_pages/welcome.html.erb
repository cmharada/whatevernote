<div class="splash container-fluid">
  <div class="text-center logo card-shadow">
    <img src="/images/WhateverNote-logo.png">
    <p>The online organizational tool for whatever's on your mind</p>
  </div>
  
  <div class="row">
    <div class="col-xs-3 col-xs-offset-2">
      <div class="text-box paper-shadow">
      </div>
    </div>
    <div class="col-xs-3 col-xs-offset-2">
      <div class="text-box paper-shadow">
      </div>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-xs-3">
      <div class="text-box paper-shadow">
      </div>
    </div>
    <div class="col-xs-4 col-xs-offset-1">
      <div class="text-box paper-shadow">
        <button class="btn btn-primary btn-lg">
          Get Started
        </button>
      </div>
    </div>
    <div class="col-xs-3 col-xs-offset-1">
      <div class="text-box paper-shadow">
      </div>
    </div>
  </div>
  <br><br>
  <div class="text-box card-shadow">
    <button class="btn btn-primary btn-lg"
      data-toggle="modal"
      data-target="#sign-in-modal">
      Sign In
    </button>
    <%= link_to "Sign Up", new_user_url %>
    <%= link_to "Sign In", new_session_url %>
  </div>
  
  <%= render partial: "static_pages/modal" %>
</div>

<% content_for :javascript do %>
<script type="text/javascript">
  $(document).ready(function() {
    setupGuestLogin($(".guest_button"));
  });
</script>
<% end %>